<?xml version="1.0" encoding="UTF-8"?>
<element>
	<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://java.sun.com/xml/ns/javaee"
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		id="WebApp_ID" version="3.0">
		<display-name>CarwashHub</display-name>
		<welcome-file-list>
			<welcome-file>index.jsp</welcome-file>
			<welcome-file>default.html</welcome-file>
		</welcome-file-list>
		
		<servlet>
			<servlet-name>CustomerController</servlet-name>
			<servlet-class>com.carwash.controller.CustomerController
			</servlet-class>
		</servlet>

		<servlet-mapping>
			<servlet-name>CustomerController</servlet-name>
			<url-pattern>/CustomerController</url-pattern>
		</servlet-mapping>

		<servlet>
			<servlet-name>LoginController</servlet-name>
			<servlet-class>com.carwash.controller.LoginController</servlet-class>
		</servlet>

		<servlet-mapping>
			<servlet-name>LoginController</servlet-name>
			<url-pattern>/LoginController</url-pattern>
		</servlet-mapping>

		<servlet>
			<servlet-name>OrderController</servlet-name>
			<servlet-class>com.carwash.controller.OrderController</servlet-class>
		</servlet>

		<servlet-mapping>
			<servlet-name>OrderController</servlet-name>
			<url-pattern>/OrderController</url-pattern>
		</servlet-mapping>

		<servlet>
			<servlet-name>OwnerController</servlet-name>
			<servlet-class>com.carwash.controller.OwnerController</servlet-class>
		</servlet>

		<servlet-mapping>
			<servlet-name>OwnerController</servlet-name>
			<url-pattern>/OwnerController</url-pattern>
		</servlet-mapping>
	</web-app>
</element>